{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "dist",
    "types": ["node"],
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      // GLOBAL
      "@/*": ["./*"],
      // SERVER
      "@server/*": ["src/*"],
      "@server-models/*": ["src/models/*"],
      "@server-commons/*": ["src/commons/*"],
      "@server-databases/*": ["src/databases/*"],
      "@server-resolvers/*": ["src/resolvers/*"],
      "@server-datasources/*": ["src/datasources/*"],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
  },
}
